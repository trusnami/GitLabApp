<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yugi.gitlabapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".studentActivity.StudentMainActivity"
            android:label="@string/title_activity_student_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".teacherActivity.TeacherMainActivity"
            android:label="@string/title_activity_teacher_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".teacherActivity.TeacherAllGroupActivity" />
        <activity android:name=".teacherActivity.GroupActivity" />
        <activity android:name=".teacherActivity.TeacherExamActivity" />
        <activity android:name=".teacherActivity.TeacherHomeworkActivity" />
        <activity android:name=".teacherActivity.TeacherExerciseActivity" />
        <activity android:name=".teacherActivity.TeacherAssignmentQuestionActivity" />
        <activity android:name=".teacherActivity.TeacherExamQuestionActivity" />
        <activity
            android:name=".teacherActivity.CreatorInfoActivity"
            android:label="@string/title_activity_creater_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".teacherActivity.TeacherAssignmentCheckActivity" />
        <activity android:name=".teacherActivity.TeacherScoreListActivity" />
        <activity android:name=".studentActivity.StudentAssignmentCheckActivity" />
        <activity android:name=".studentActivity.QuestionListActivity" />
        <activity android:name=".studentActivity.ReadMeCheckActivity" />
        <activity android:name=".studentActivity.ReadMeActivity" />
        <activity android:name=".studentActivity.ResultActivity" />
        <activity android:name=".studentActivity.TestcaseActivity"></activity>
    </application>

</manifest>