<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yugi.gitlabapp.teacherActivity.TeacherAssignmentCheckActivity"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/student_assignment_id_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:maxLines="1"
        android:hint="assginment:38"/>

    <EditText
        android:id="@+id/student_student_id_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:maxLines="1"
        android:hint="student:237"/>

    <Button
        android:id="@+id/student_check_score_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="check"
        android:textAllCaps="false"/>

</LinearLayout>
